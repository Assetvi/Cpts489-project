<!DOCTYPE html>
<html lang="en">
    <!-- Links and site icon and name content -->
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/home.css" />
        <link rel="icon" href="images/Icon.png"> <!-- Icon of page title -->
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
            rel="stylesheet">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous" />
        <script src="../controllers/homeController.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <title> Movie Ratings </title>
    </head>

    <!-- Content of page -->
    <body class="body">
        <!-- Navbar content -->
        <header>
            <%- include("header") %>
        </header>

        <!-- Page content -->
        <hr style="border-top: 5px solid; margin: 0px 0px 3rem">
        <div class="container" style="margin: 0rem 10rem; width: 77%;">
            <div class="row">
                <div class="col">
                    <h1 style="margin-bottom: 3rem; color:#222529; font-weight: bold;"> Movies </h1>
                </div>
            </div>
            <div class="row">
                <!-- Display movies -->
                <div class="container">
                    <div class="row">
                        <% if (movies && movies.length > 0) { %>
                            <% movies.forEach(movie => { %>
                                <div class="col-lg-2 col-md-3 col-sm-4">
                                    <a href="/movie?id=<%- movie.id %>" style="text-decoration: none;">
                                        <div class="movie">
                                            <% if (movie && movie.poster_path) { %>
                                                <div class="movie-container">
                                                    <img class="poster"
                                                        src="<%= TMDbAPI.getPosterImageUrl(movie.poster_path) %>"
                                                        alt="Movie Poster">
                                                    <div id="rating">
                                                        <p class="movieTitle"> <%= movie.vote_average.toFixed(1) %> </p>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <p class="movieTitle"> No poster available </p>
                                            <% } %>
                                            <% if (movie) { %>
                                                <p class="movieTitle"> <%= movie.title %> </p>
                                            <% } %>
                                        </div>
                                    </a>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No movies found</p>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Page change info -->
                <div class="pagination">
                    <div style="margin: auto; margin-bottom: 5rem; margin-top: 20px">
                        <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>"
                            class="pagebutton">Previous</a>
                        <% } %>
                        <% if (movies && movies.length > 0) { %>
                        <span style="color: #222529; font-weight: bold;">Page <%= currentPage %></span>
                        <% } %>
                        <a href="?page=<%= currentPage + 1 %>" class="pagebutton">Next</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Page end -->
        <div id="pageEnd">
        </div>
    </body>
</html>