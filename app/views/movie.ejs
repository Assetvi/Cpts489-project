<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/home.css" />
        <link rel="icon" href="images/Icon.png"> <!-- Icon of page title -->
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
            rel="stylesheet">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous" />
        <script src="../controllers/movieController.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <title> Details </title>
    </head>
    <body>
        <!-- Navbar content -->
        <header>
            <%- include("header") %>
        </header>

        <!-- Page content -->
        <hr style="border-top: 5px solid; margin: 0px 0px 3rem">
        <div class="container" style="margin: 0rem 10rem; width: 77%;">
            <div class="row">
                <div class="col">
                    <!-- Display movie poster -->
                    <img class="moviePagePoster"
                    src="<%= TMDbAPI.getPosterImageUrl(movie.poster_path) %>"
                    alt="Movie Poster">
                    <h1
                        style="margin-bottom: 3rem; color:#222529; font-weight: bold;">
                        <%= movie.title %> </h1>
                    <!-- Movie details -->
                    <div id="movieDetails">
                        <!-- Display movie rating -->
                        <p class="subTitle">Rating: </p>
                        <p class="subTitle" style="color: #408558; margin-bottom: 30px;"><%= movie.vote_average.toFixed(1) %></p>
                        <!-- Display movie release date -->
                        <p class="subTitle">Release Date: </p>
                        <p class="subTitle" style="color: #408558; margin-bottom: 30px;"><%= movie.release_date %></p>
                        <!-- Display movie genres -->
                        <p class="subTitle">Genres:</p>
                        <% if (movie.genres && movie.genres.length > 0) { %>
                        <% movie.genres.forEach(genre => { %>
                        <span class="subTitle" style="color: #408558; margin-right: 15px;"><%= genre.name %></span>
                        <% }) %>
                        <% } else { %>
                        <p>No genre found</p>
                        <% } %>
                        <!-- Display movie overview -->
                        <p class="subTitle" style="margin-top: 30px">Overview: </p>
                        <p class="subTitle" style="font-weight: normal; margin-bottom: 30px; width: 65%;"><%= movie.overview %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Page end -->
        <div id="pageEnd"></div>
    </body>
</html>
